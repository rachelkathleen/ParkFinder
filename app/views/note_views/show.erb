<% if @note.park_id %>

   <div class="row">
     <div class="col s12 m12 l12">
       <div class="card">
         <div class="card-image">
           <img src="<%= Park.find(@note.park_id).image %>" alt="<%= Park.find(@note.park_id).park_name%>" style='height: 100%; width: 100%; object-fit: contain'">
           <span class="card-title"><%= @note.title%></span>
         </div>
         <div class="card-content">
           <p><%= @note.content%></p>
         </div>
         <div class="card-action">
           <a href="/parks/<%= @note.park_id%>"> More info about this park</a>
           <%if @note.user = current_user%>
           <a href="/notes/<%= @note.id %>/edit">Edit this note</a>
           <%end%>
         </div>
       </div>
     </div>
   </div>

   <% end %>

   <%if @note.user = current_user%>
 <a href="/notes/<%= @note.id %>/edit">Edit</a>
  <form method="POST" action="/notes/<%= @note.id %>">
     <input type="hidden" value="DELETE" name="_method">
     <input type="submit" value="Delete">
  </form>
  <%end%>
