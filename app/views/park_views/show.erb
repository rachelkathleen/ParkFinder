<img src="<%= @park.image%>" alt="<%= @park.park_name%>" style='height: 100%; width: 100%; object-fit: contain'>
<div class="hero-image" img src="<%= @park.image%>" alt="<%= @park.park_name%>" style='height: 100%; width: 100%; object-fit: contain'">
<div class="hero-text">
   <h1 align="center"><%= @park.park_name%></h1>
   <p align="center"><%= @park.headline%></p>
</div>
</div
<div class="container white">
   <ul class="collapsible">
      <li>
         <div class="collapsible-header"><i class="material-icons">control_point</i>Park description</div>
         <div class="collapsible-body"><span><%= @park.description%><br><br><a href="><%= @park.website%></">NPS Website</a></span></div>
      </li>
      <%if logged_in?%>
      <li>
         <div class="collapsible-header"><i class="material-icons">control_point</i>Notes about <%= @park.park_name%></div>
         <div class="collapsible-body">
            <span><%Note.all.each do |note|%>
            <% if note.park_id == @park.id%>
            <a href="/notes/<%=note.id%>"><%=note.title%></a><br>
            <%end%>
            <%end%>
            <br><a href="/notes/new">Write a new note</a></span>
         </div>
      </li>
      <li>
         <div class="collapsible-header"><i class="material-icons">control_point</i>Vistors</div>
         <div class="collapsible-body">
            <span>
               <% @park.user_parks.each do |up|%>
               <%if up.been_to%>
               <p><%=up.user.user_name%></p>
               <%end%>
               <%end%>
            </span>
         </div>
      </li>
      <li>
         <div class="collapsible-header"><i class="material-icons">control_point</i>Users who want to visit</div>
         <div class="collapsible-body">
            <span>
               <% @park.user_parks.each do |up|%>
               <%if up.bucket_list%>
               <p><%=up.user.user_name%></p>
               <%end%>
               <%end%>
            </span>
         </div>
      </li>
      <li>
         <div class="collapsible-header"><i class="material-icons">control_point</i>Add this park to your profile</div>
         <div class="collapsible-body">
            <span>
               <!-- want to show first form if the current_user doesn't have @park as been_to OR bucket_list -->
               <!-- right now can make multiple UP that are identical, and this always shows -->
               <% current_user.user_parks.each do |up| %>
               <%if up.park_id != @park.id %>
               <form action="/parks/user_parks/new" method="post">
                  <input type="hidden" name="user_id" value="<%=current_user.id%>">
                  <input type="hidden" name="park_id" value="<%=@park.id%>">
                  <p>
                     <label>
                     <input type="checkbox" name="bucket_list"/>
                     <span>Bucket List!</span>
                     </label>
                  </p>
                  <p>
                     <label>
                     <input type="checkbox" name="been_to"/>
                     <span>Been to!</span>
                     </label>
                  </p>
                  <input type="submit" value="Add to list">
                  <% end %>
                  <% end %>
               </form>
               <!-- want to show this form if current_user had @park in bucket_list -->
               <!-- the route isn't working - need help -->
               <% @park.user_parks.each do |up|%>
               <%if up.user_id == current_user.id && up.bucket_list %>
               <form action="/parks/user_parks/:id" method="post">
               <!-- broken route -->
               <input type='hidden' value='PATCH' name='_method'>
               <p>
                  <label>
                  <input type="checkbox" name="been_to"/>
                  <span>Move to been list?</span>
                  </label>
                  <input type="hidden" name="bucket_list" value="false">
                  <input type="submit" value="Add to list">
                  <br>
                  <br>
                  <% end %>
                  <% end %>
                  <% @park.user_parks.each do |up|%>
                  <%if up.user_id == current_user.id && up.been_to %>
               <form action="/parks/user_parks/:id" method="post">
               <!-- broken route -->
               <input type='hidden' value='PATCH' name='_method'>
               <p>
                  <label>
                  <input type="checkbox" name="been_to"/>
                  <span>Remove from lists?</span>
                  </label>
                  <input type="hidden" name="bucket_list" value="false">
                  <input type="hidden" name="been_to" value="false">
                  <input type="submit" value="Remove">
                  <% end %>
                  <% end %>
               </p>
            </span>
         </div>
      </li>
      <%end%>
   </ul>
</div>
