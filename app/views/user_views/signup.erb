<h3>Create a profile</h3>
<form action="/signup" method="POST">
  <div class="row">
    <div class="twelve columns">
      <label for="Username">Username</label>
      <input class="u-full-width" type="text" name="user_name" required>
    </div>
    <div class="twelve columns">
      <label for="exampleEmailInput">Email</label>
      <input class="u-full-width" type="email" name="email" required>
    </div>
    <div class="twelve columns">
      <label for="exampleEmailInput">Password</label>
      <input class="u-full-width" type="password" name="password" required>
    </div>
  <input class="button" type="submit" value="Submit">
</form>
